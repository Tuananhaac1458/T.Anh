<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten san pham:  "/>
            <TextView android:text="Ten san pham"
                android:textSize="20dp"
                android:id="@+id/tvname"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ma san pham:  "/>
            <TextView android:text="Ten san pham"
                android:textSize="20dp"
                android:id="@+id/tvcode"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So luong:  "/>
            <TextView android:text="Ten san pham"
                android:textSize="20dp"
                android:id="@+id/tvsoluong"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>


        <ScrollView android:id="@+id/ScrollView01"
            android:layout_width="match_parent" android:layout_below="@+id/ImageView01"
            android:layout_height="50px">
        </ScrollView>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnxuat" android:layout_below="@id/ScrollView01"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:text="Xuat kho"
                android:layout_weight="1"/>
            <Button android:id="@+id/btnsua" android:layout_below="@id/ScrollView01"
                android:layout_weight="1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:text="Update" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_weight="1"
                android:id="@+id/btnxoa" android:layout_below="@id/ScrollView01"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:text="Xoa" />

            <Button android:id="@+id/btnhuy"
                android:layout_weight="1"
                android:layout_below="@id/ScrollView01"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>